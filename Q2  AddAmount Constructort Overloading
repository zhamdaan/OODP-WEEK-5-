#include<iostream> 
#include <string> 
using namespace std ;

class AddAmount 
{  int amount = 50  ;
  public  :  
   AddAmount () {}  
   AddAmount (int a)
   { 
       amount =amount + a  ;  
   }  
   int  display () 
    {  cout << amount << "$  " <<endl ; 
      return 0  ;  
    } 
     ~AddAmount () {} 
} ;  
int main () 
{ AddAmount X (100) ,  Y ; 
X.display ()  ;  
Y.display ()   ;  
return 0  ; 
} 
